	<style lang="scss">
		.root {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 40px;
			font-family: "Noto Sans JP", "Noto Sans", sans-serif;
		}

		.momiyamounta-in {
			display: flex;
			overflow: hidden;

			.momiyamountain {
				width: 100%;
			}

			.momiyama,
			.unten {
				width: 50%;
				display: none;
			}
		}

		.gokaicho {
			font-size: 40px;
			background: red;
			padding: 20px 60px;
			border-radius: 999999px;
		}

		.comment-from-chatgpt {
			max-width: 600px;
			padding: 16px;
			text-align: center;
		}

		.buttons {
		}

		.button {
			text-decoration: none;
			color: black;
			background: #eeeeee;
			border: none;
			font-size: 14px;
			padding: 8px 12px;
			border-radius: 9999px;
			background: rgba(0, 127, 255, 0.3);
			transition-duration: 300ms;
			cursor: pointer;

			&:hover {
				background: rgba(0, 127, 255, 0.7);
			}
		}
	</style>

	<script>
		import { gsap } from "gsap";

