		const kiwomomuButton = document.querySelector(".kiwomomu");

		kiwomomuButton?.addEventListener("click", () => {
			alert("モミモミ・・・");
		});

		const gokaichoButton = document.querySelector(".gokaicho");

		gokaichoButton?.addEventListener("click", () => {
			gsap.set(".momiyama, .unten", {
				display: "block",
			});

			gsap.set(".momiyamounta-in .momiyamountain", {
				display: "none",
			});

			gsap.to(".momiyamounta-in .momiyama", {
				x: "-100%",
				duration: 0.5,
			});

			gsap.to(".momiyamounta-in .unten", {
				x: "100%",
				duration: 0.5,
			});
		});
	</script>
